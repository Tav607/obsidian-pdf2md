{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "obsidian": ["node_modules/obsidian/obsidian.d.ts"]
    },
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES6",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["obsidian", "node"],
    "isolatedModules": true,
    "strictNullChecks": true,
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES7"
    ],
    "typeRoots": ["node_modules/@types", "node_modules/obsidian"]
  },
  "include": [
    "**/*.ts",
    "node_modules/obsidian/obsidian.d.ts"
  ]
}
